<?xml version="1.0" encoding="UTF-8"?>
<dialog closable="true" modal="true" close="removeDialog(this)" bottom="5" columns="1" gap="8" icon="/icons/status_problem.png" left="5" name="connectionWarning" right="5" text="i18n.common.attention" top="5">
    <label text="i18n.sentence.impossible.to.connect"/>
    <panel gap="10" halign="center">
    	<button icon="/icons/about.png" name="btShowDetails" action="showDetails" text="i18n.common.more.details" font="bold"/>
    </panel>
    
    <label text="i18n.sentence.would.you.like.to.create.account"/>
    <panel gap="10" halign="center">
    	<button type="default" action="createAccount(connectionWarning)" icon="/icons/tick.png" name="btYes" text="i18n.action.yes"/>
        <button type="cancel" action="removeDialog(connectionWarning)" icon="/icons/cross.png" name="btNo" text="i18n.action.no"/>
    </panel>
</dialog>
