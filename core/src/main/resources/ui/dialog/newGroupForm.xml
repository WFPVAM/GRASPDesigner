<?xml version="1.0" encoding="UTF-8"?>
<dialog closable="true" close="removeDialog(this)" bottom="4" columns="2" gap="8" icon="/icons/group.png" left="4" modal="true" name="newGroupDialog" right="4" text="i18n.action.new.group" top="4">
    <label text="i18n.common.name"/>
    <textfield columns="30" name="newGroup_name" action="groupNameChanged(this.text)" perform="createNewGroup(newGroup_name.text, newGroupDialog)"/>
    <panel gap="5" colspan="2" halign="center">
	    <button action="createNewGroup(newGroup_name.text, newGroupDialog)" name="btOk" icon="/icons/tick.png" text="i18n.action.ok" enabled="false"/>
	    <button action="removeDialog(newGroupDialog)" icon="/icons/cross.png" text="i18n.action.cancel"/>
    </panel>
</dialog>
